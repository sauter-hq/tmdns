#! /bin/sh
#

. /etc/init.d/akfunctions

PATH=/sbin:/bin:/usr/sbin:/usr/bin

DAEMON=!sbindir!/tmdns

#    |.........1.......|.2.........3.........4.........5........!
NAME="mDNS service"
DESC="tmdns multicast responder"

#set -e

# exit from init script when disabled, shift away "force" when present
exit_if_disabled START_TMDNS $* || shift

if [ ! -x $DAEMON ] 
then
    echo -n "$DESC :" 
    eval $rc_not_installed
fi

case "$1" in
  start)
  	console_start "$DESC "
	lcd_start $NAME
	/sbin/startproc $DAEMON
	rc_exit $?
	;;

  stop)
	console_stop "$DESC: "
	lcd_stop $NAME
	/sbin/checkproc $DAEMON || rc_exit 0
	/sbin/killproc $DAEMON
	rc_exit $?
	;;

  status)
  	/sbin/checkproc $DAEMON
	result=$?
	console_check $result $DESC
	rc_exit $result
	;;

  restart|force-reload)
  	$0 stop
	$0 start
	rc_exit $?
	;;

  *)
	echo "Usage: $0 {start|stop|status|restart|force-reload}" >&2
	rc_exit 101
	;;
esac



